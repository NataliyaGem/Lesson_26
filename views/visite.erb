<h3> ***Добро пожаловать в барбершоп*** </h3>

<form action="/visite" method="POST">
    <div class="form-group"> 
    <label>ИМЯ</label>
    <input type="text" name="@user_name" class="form-control" placeholder="Введите ваше имя" value="<%=@user_name%>">
  </div>    
  <div class="form-group"> 
    <label>ТЕЛЕФОН</label>
    <input type="text" name="@phone" class="form-control" placeholder="Введите номер телефона"value="<%=@phone%>">
  </div>
     <div class="form-group"> 
    <label>Когда Вас ждать?</label>
    <input type="text" name="@time" class="form-control" placeholder="Желаемый день и время" value="<%=@time%>">
  </div> 
    <div class="form-group"> 
    <label>Выберете мастера</label>
        <select name="@barber" class="form-control">
            <option>Чебурашка</option>
            <option>Крокодил Гена</option>
            <option>Крыска Лариска</option>
            <option>Шапокляк</option>
        </select>
  </div> 
   <div class="form-group"> 
    <label>Выберете цвет окрашивания</label>       
       <select id="color" name="@color">
            <option value="#00000">pusto</option>
            <option value="#7bd148">Green</option>
            <option value="#5484ed">Bold blue</option>
            <option value="#a4bdfc">Blue</option>
            <option value="#46d6db">Turquoise</option>
            <option value="#7ae7bf">Light green</option>
            <option value="#51b749">Bold green</option>
            <option value="#fbd75b">Yellow</option>
            <option value="#ffb878">Orange</option>
            <option value="#ff887c">Red</option>
            <option value="#dc2127">Bold red</option>
            <option value="#dbadff">Purple</option>
            <option value="#e1e1e1">Gray</option>
        </select>
    </div>
    <!--button Submit кнопка получилась синяя-->
  <button type="submit" class="btn btn-primary">Записаться</button><br/>
  <!-- кнопка белого цвета самая примитивная  <input type="submit">-->

</form>
<!--подключение javascript именно на этой странице/ -->
<script type="text/javascript">
  $(function () {
      
      $('#color').simplecolorpicker();
  })

</script>
